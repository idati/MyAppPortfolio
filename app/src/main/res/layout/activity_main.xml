<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.administrator.myappportfolio.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="@string/my_nanodegree_apps"
            android:layout_width="@dimen/margin_width"
            android:layout_height="@dimen/margin_height"
            android:id="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            android:layout_marginLeft="@dimen/margin_left_title"
            android:layout_marginStart="@dimen/margin_start_title"
            app:layout_constraintTop_toTopOf="@+id/activity_main"
            android:layout_marginTop="@dimen/margin_top_title"
            app:layout_constraintRight_toRightOf="@+id/activity_main"
            android:layout_marginRight="@dimen/margin_right_title"
            android:layout_marginEnd="@dimen/margin_end_title" />

        <Button
            android:text="POPULAR MOVIES"
            style="@style/CustomButtonStyle"
            android:id="@+id/button"
            android:contentDescription="This button will launch my Popular Movies app!"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintRight_toRightOf="@+id/activity_main" />

        <Button
            android:id="@+id/button3"
            style="@style/CustomButtonStyle"
            android:text="STOCK HAWK"
            android:onClick="sendMessage"
            android:contentDescription="This button will launch my Stock Hawk app!"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintRight_toRightOf="@+id/activity_main" />

        <Button
            android:text="BUILD IT BIGGER"
            style="@style/CustomButtonStyle"
            android:id="@+id/button2"
            android:contentDescription="This button will launch my Build it bigger app!"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintRight_toRightOf="@+id/activity_main" />

        <Button
            android:text="MAKE YOUR APP MATERIAL"
            style="@style/CustomButtonStyle"
            android:id="@+id/button4"
            android:contentDescription="This button will launch my make your app material app!"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintRight_toRightOf="@+id/activity_main" />

        <Button
            android:text="GO UBIQUITOUS"
            style="@style/CustomButtonStyle"
            android:id="@+id/button5"
            android:contentDescription="This button will launch my go ubiquitous app!"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintRight_toRightOf="@+id/activity_main" />

        <Button
            android:text="CAPSTONE"
            style="@style/CustomButtonStyle"
            android:id="@+id/button6"
            android:contentDescription="This button will launch my capstone app!"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            app:layout_constraintRight_toRightOf="@+id/activity_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright 2016"
            android:id="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            android:layout_marginTop="@dimen/margin_top_2"
            app:layout_constraintRight_toRightOf="@+id/activity_main"
            app:layout_constraintBottom_toBottomOf="@+id/activity_main"
            android:layout_marginBottom="@dimen/margin_bottom_2"
            app:layout_constraintVertical_bias="0.98" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
